{{#section 'script'}}
    <script src="/js/login.js"></script>
    <script>
        // Get the header and footer elements
        const header = document.querySelector("header");
        const footer = document.querySelector("footer");

        // Remove the header and footer elements
        header.parentNode.removeChild(header);
        footer.parentNode.removeChild(footer);
    </script>
{{/section}}

<main>
    <h2>로그인</h2>
    <form name="login">
        <div><label for="email" class="form-label col-3 text-end">아이디</label>
            <input type="text" name="email" id="email"></div>
        <div><label for="passwd" class="form-label col-3 text-end">비밀번호</label>
            <input type="password" name="passwd" id="passwd"></div>
        <div class="d-grid ">
            <button type="button" id="loginbtn"
                    class="btn btn-primary col-4 mx-auto">로그인</button></div>


    </form>
</main>

